<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView android:layout_width="40dp" android:layout_height="40dp"
               android:id="@+id/scorePlayerImage"
               android:layout_margin="5dp"/>

    <TextView android:layout_width="70dp" android:layout_height="wrap_content" android:minEms="3"
              android:text=""
              android:id="@+id/scorePlayerName"
              android:layout_centerInParent="true"
              android:layout_marginStart="20dp"
              android:layout_toEndOf="@+id/scorePlayerImage"
              android:fontFamily="sans-serif-condensed"/>

</RelativeLayout>