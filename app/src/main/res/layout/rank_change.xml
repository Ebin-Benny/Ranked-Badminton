<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <View android:layout_width="12dp" android:layout_height="12dp"
               android:id="@+id/rankChangeIndicator"
               android:layout_gravity="center_vertical"/>

    <TextView android:layout_width="20dp" android:layout_height="wrap_content"
              android:id="@+id/rankChange"
              android:layout_marginStart="1dp"
              android:text="+20"
              android:layout_gravity="center_vertical" android:textSize="10sp"
              android:fontFamily="sans-serif-condensed"/>

</LinearLayout>