<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:animateLayoutChanges="true"
              android:background="@color/interface_background">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="@color/colorAccent"
    >

        <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
                  android:text="@string/add_game"
                  android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Title"
                  android:padding="5dp"
                  android:id="@+id/title"
                  android:layout_marginStart="10dp"
                  android:layout_centerVertical="true"
                  android:textAlignment="viewStart" android:fontFamily="sans-serif"
                  android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="5dp"
                      android:layout_marginEnd="5dp"
                      android:layout_marginBottom="5dp"
                      android:gravity="center_vertical">

            <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:cardUseCompatPadding="true" app:cardElevation="0dp">
                <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/name_input_layout_1"
                                                               android:padding="2dp">

                    <MultiAutoCompleteTextView android:layout_width="140dp" android:layout_height="wrap_content"
                                               android:singleLine="true"
                                               android:inputType="textPersonName"
                                               android:id="@+id/name_input_1"
                                               android:fontFamily="sans-serif-condensed"
                                               android:imeOptions="actionNext"
                                               android:nextFocusForward="@+id/name_input_2"
                                               android:completionThreshold="1"
                    />

                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginStart="5dp"
                          android:gravity="right">

                <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="7dp"
                                                    app:cardUseCompatPadding="true"
                                                    app:cardElevation="0dp">
                    <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/text_input_layout_1_1"
                                                                   android:padding="2dp">

                        <EditText android:layout_width="45dp" android:layout_height="wrap_content"
                                  android:hint="Pts"
                                  android:id="@+id/score_input_1_1"
                                  android:fontFamily="sans-serif-condensed"
                                  android:imeOptions="actionNone"
                                  android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="7dp"
                                                    app:cardUseCompatPadding="true"
                                                    app:cardElevation="0dp">

                    <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/text_input_layout_2_1"
                                                                   android:padding="2dp">

                        <EditText android:layout_width="45dp" android:layout_height="wrap_content"
                                  android:hint="Pts"
                                  android:id="@+id/score_input_2_1"
                                  android:fontFamily="sans-serif-condensed"
                                  android:imeOptions="actionNone"
                                  android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="7dp"
                                                    app:cardUseCompatPadding="true" app:cardElevation="0dp">
                    <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/text_input_layout_3_1"
                                                                   android:padding="2dp">

                        <EditText android:layout_width="45dp" android:layout_height="wrap_content"
                                  android:hint="Pts"
                                  android:id="@+id/score_input_3_1"
                                  android:fontFamily="sans-serif-condensed"
                                  android:imeOptions="actionNone"
                                  android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_marginStart="5dp"
                      android:layout_marginEnd="5dp"
                      android:layout_marginBottom="10dp"
                      android:gravity="center_vertical">

            <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:cardUseCompatPadding="true" app:cardElevation="0dp">
                <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/name_input_layout_2"
                                                               android:padding="2dp">

                    <MultiAutoCompleteTextView android:layout_width="140dp" android:layout_height="wrap_content"
                                               android:singleLine="true"
                                               android:inputType="textPersonName"
                                               android:id="@+id/name_input_2"
                                               android:fontFamily="sans-serif-condensed"
                                               android:imeOptions="actionNext"
                                               android:nextFocusForward="@id/score_input_1_1"
                                               android:completionThreshold="1"
                    />

                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginStart="5dp"
                          android:gravity="right">

                <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="7dp"
                                                    app:cardUseCompatPadding="true"
                                                    app:cardElevation="0dp">
                    <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/text_input_layout_1_2"
                                                                   android:padding="2dp">

                        <EditText android:layout_width="45dp" android:layout_height="wrap_content"
                                  android:hint="Pts"
                                  android:id="@+id/score_input_1_2"
                                  android:fontFamily="sans-serif-condensed"
                                  android:imeOptions="actionNext"
                                  android:nextFocusForward="@+id/score_input_2_1"
                                  android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="7dp"
                                                    app:cardUseCompatPadding="true"
                                                    app:cardElevation="0dp">

                    <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/text_input_layout_2_2"
                                                                   android:padding="2dp">

                        <EditText android:layout_width="45dp" android:layout_height="wrap_content"
                                  android:hint="Pts"
                                  android:id="@+id/score_input_2_2"
                                  android:fontFamily="sans-serif-condensed"
                                  android:imeOptions="actionNext"
                                  android:nextFocusForward="@+id/score_input_3_1"
                                  android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="7dp"
                                                    app:cardUseCompatPadding="true" app:cardElevation="0dp">
                    <android.support.design.widget.TextInputLayout android:layout_width="wrap_content"
                                                                   android:layout_height="wrap_content"
                                                                   android:id="@+id/text_input_layout_3_2"
                                                                   android:padding="2dp">

                        <EditText android:layout_width="45dp" android:layout_height="wrap_content"
                                  android:hint="Pts"
                                  android:id="@+id/score_input_3_2"
                                  android:fontFamily="sans-serif-condensed"
                                  android:imeOptions="actionNone"
                                  android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
